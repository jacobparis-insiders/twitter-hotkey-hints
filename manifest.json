{
  "name": "Twitter",
  "manifest_version": 3,
  "version": "1.3.1",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "service_worker": "src/auth-worker"
  },
  "action": {
    "default_icon": "icons/icon19.png",
    "default_title": "browser action demo",
    "default_popup": "index.html"
  },
  "permissions": [
    "storage",
    "unlimitedStorage",
    "webRequest",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "http://twitter.com/*",
    "https://twitter.com/*"
  ],
  "optional_host_permissions": [
    "*://*.twitter.com/",
    "*://*.twimg.com/"
  ],
  "web_accessible_resources": [
    {
      "matches": [
        "http://twitter.com/*",
        "https://twitter.com/*"
      ],
      "resources": [
        "icons/icon48.png"
      ]
    }
  ],
  "content_scripts": [
    {
      "matches": [
        "http://twitter.com/*",
        "https://twitter.com/*"
      ],
      "js": [
        "src/root.tsx"
      ]
    }
  ],
  "options_page": "index.html"
}